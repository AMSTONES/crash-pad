<div class="cards">
  <% @flats.each do |flat| %>
    <%= link_to flat_path(flat) do %>
      <div class="card-flat">
        <div class="card-flat-img">
          <img src="https://images.unsplash.com/photo-1464890100898-a385f744067f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2850&q=80"/>
        </div>
        <div class="card-flat-info">
          <div class="card-flat-text">
            <h2><%= flat.name %></h2>
            <p><%= flat.address.slice(0, 60) + '...' %></p>
          </div>
          <div class="card-flat-pricing">Â£<%= flat.price %></div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div
  class="m-3"
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
