<div class='cards'>
  <% @bookings.each do |booking| %>
    <div class = 'card-booking p-3 my-1'>
      <div class="card-booking-text">
        <h2 class= 'card-booking-title'><%= booking.flat.name %></h3>
        <p><%= booking.flat.address %></p>
        <p>From <strong><%= booking.start_date %></strong> / To <strong><%= booking.end_date %></strong></p>
      </div>
      <div class="">
        <%= link_to 'View Flat', flat_path(booking.flat), class: 'btn btn-info' %>
      <%= link_to 'Cancel Booking', flats_path,class: 'btn btn-warning' %>
      </div>
    </div>
  <% end %>
</div>


