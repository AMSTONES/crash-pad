<br>
<h1>Confirmed bookings</h1>
<br>
<% if @bookings != [] %>
  <div class='cards'>
    <% @bookings.each do |booking| %>
      <div class = 'card-booking p-3 my-1'>
        <div class="card-booking-text">
          <h2 class= 'card-booking-title'><%= booking.flat.name %></h2>
          <p><%= booking.flat.address %></p>
          <p>From <strong><%= booking.start_date %></strong> / To <strong><%= booking.end_date %></strong></p>
        </div>
        <div class="">
          <%= link_to 'View Pad', flat_path(booking.flat), class: 'btn btn-info' %>
          <%= link_to 'Cancel Booking', booking_path(booking), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-warning' %>
        </div>
      </div>
    <% end %>
    </div>
    <% else %>
    <div class='dflex text-center'>
      <h2 class='oh-no'>Oh no! You haven't booked anything yet!</h2>
      <div class='text-center'>
      <%= link_to 'View Pads', flats_path, class: 'btn btn-info' %>
      </div>
    </div>
  <% end %>
