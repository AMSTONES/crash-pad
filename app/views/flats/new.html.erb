<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Create a new pad</h1>
      <%= simple_form_for @flat do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description %>

        <div class="submit"><%= f.submit class: 'btn btn-info' %></div>

        <%= f.input :price %>

      <% end %>
    </div>
  </div>

    <div class='d-flex justify-content-between'>
      <%= link_to 'Back to the pad', flats_path, class: 'btn btn-warning' %>
    </div>

</div>


