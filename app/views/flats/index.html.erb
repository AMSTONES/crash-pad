<div class="cards">
  <% count = 1 %>
  <% img_collection = 'https://source.unsplash.com/collection/8398163/' %>
  <% @flats.each do |flat| %>
    <%= link_to flat_path(flat) do %>
      <div class="card-flat">
        <div class="card-flat-img">
          <img src=<%= "https://source.unsplash.com/collection/8398163/400x400/?sig=#{count}" %>/>
        </div>
        <% count += 1 %>
        <div class="card-flat-info">
          <div class="card-flat-text">
            <h2><%= flat.name %></h2>
            <p><%= flat.address.slice(0, 60) + '...' %></p>
          </div>
          <div class="card-flat-pricing">Â£<%= flat.price %></div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div
  class="my-3"
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
